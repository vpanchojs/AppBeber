<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aitec.appbeber.detailsOrder.ui.DescriptionOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardElevation="3dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icon_user"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_person" />

                <LinearLayout
                    android:id="@+id/ll_info_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/icon_user"
                    android:layout_toRightOf="@+id/icon_user"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:hint="Nombre Completo"
                        android:theme="@style/TextLabelNone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:text="1104074479"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="CÃ©dula"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_dni"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="1104074479"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="Celular"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="Efectivo"
                                android:textSize="14sp" />


                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icon_car_send"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_local_shipping" />

                <LinearLayout
                    android:id="@+id/ll_info_send_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/icon_car_send"
                    android:layout_toRightOf="@+id/icon_car_send"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="Direccion Principal"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="1104074479"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:hint="Referencia"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_address_reference"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="Referencia "
                                android:textSize="14sp" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icon_order"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_shopping_basket" />

                <LinearLayout
                    android:id="@+id/ll_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/icon_order"
                    android:layout_toRightOf="@+id/icon_order"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Fecha Emision"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_date_creation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:maxLines="3"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="1104074479"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:focusableInTouchMode="false"
                            android:hint="Precio Total"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="45.6"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:hint="Estado"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_state_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="Efectivo"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:hint="Metodo Pago"
                            android:theme="@style/TextLabelNone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_method_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:text="Efectivo"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:hint="Descripcion Estado"
                        android:theme="@style/TextLabelNone">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_rason_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:text="1104074479"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

